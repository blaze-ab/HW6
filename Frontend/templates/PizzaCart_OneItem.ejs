<div>
    <div class="actually-orders flex">
        <div class="information">
            <h3>  <%= pizza.title %> (<%= size %>)</h3>
            <div class="flex">
                <div class="align"> <%= pizza[size].size %> <img src="assets/images/size-icon.svg"></div>
                <div class="align"> <%= pizza[size].weight %> <img src="assets/images/weight.svg"></div>
            </div>
            <div class="flex">
                <% if(window.location.pathname == "/") { %>
                <div class="flex" style="width: 70%; justify-content: space-around;">
                    <button class="signs minus" type="button"> -</button>
                    <div class="num"> <%= quantity %> </div>
                    <button class="signs plus" type="button"> +</button>
                    <button class="signs x" type="button"> x</button>
                </div>
                <% } %>
                <% if(window.location.pathname == "/order.html") { %>
                <div>
                    <b id="price"><%= price %> грн</b>
                    <b id="quantity" style="margin: 2px">Кількість: <%= quantity %></b>
                </div>
                <% } %>
            </div>
        </div>
        <img class="for-orders" src="<%= pizza.icon %>" alt="Pizza">
    </div>
</div>